.movies {
  width: 750rpx;
  height: 1000rpx;
}
.movies image {
  height: 100%;
  width: 100%;
}
.gap {
  height: 50rpx;
}
.nav {
  display: flex;
}
.nav-item {
  width: 25%;
  text-align: center;
  font-size: 30rpx;
}
.nav-pic {
  width: 75rpx;
  height: 75rpx;
}
.block-description {
  font-size: 40rpx;
  padding-left: 4%;
  padding-bottom: 10rpx;
}
.pic-limit {
  padding-left: 3%;
  padding-right: 3%;
  padding-bottom: 4%;
}
.block-pic {
  height: 350rpx;
  width: 100%;
  border-radius: 20rpx;
}
.scroll {
  white-space: nowrap;
}
.scroll ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.scroll_pic {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  margin-left: 4%;
  margin-right: 4%;
}
.scroll-description {
  font-size: 50rpx;
  padding-bottom: 10rpx;
  padding-left: 4%;
  font-weight: 700;
}

