
page {
	background-color: #F1F1F1;
}
.notice {
	width: 100%;
	height: 250rpx;
}
.notice_item {
	display:flex;
	justify-content: center;
}
.notice_box {
	width: 98%;  /* 控制两张图片的间距 */
	height: 100%;
}
.notice_img {
	width: 100%;
	height: 100%;
	border-radius: 10rpx;
}
.gap {
	height: 50rpx;
}
.shadowBox {
	display: flex;
	flex-wrap: wrap;
	background-color: #FFFFFF;
	border-radius: 15rpx;
	margin: 20rpx;
	box-shadow:0 10rpx 15rpx -10rpx #808080;
	padding: 15rpx;
}
.service_item {
	width: 20%;
	text-align: center;
	font-size: 20rpx;
}
.service_pic {
	width: 55rpx;
	height: 55rpx;
	margin: 10rpx;
}
.scroll_box {
	width: 100%;
	height: auto;
	overflow: hidden;
	white-space: nowrap;
}
.scroll_box scroll-view{
	height: 100%;
	width: auto;
	overflow: hidden;
}
.scroll_item {
	width: 35%;
	height: 93%;
	margin-left: 20rpx;
	margin-right: 20rpx;
	display: inline-flex;
	flex-direction: column;
	background-color: #FFFFFF;
	border-radius: 15rpx;
	box-shadow:0 10rpx 10rpx -10rpx #808080;
	padding: 20rpx;
	overflow: hidden;
}
.scroll_item1 {
	display: flex;
	margin: 2rpx;
}
.scroll_text1 {
	font-size: 35rpx;
	font-weight: bold;
	margin-right: 100rpx;
}
.scroll_text2 {
	font-size: 20rpx;
	color: #8F8F94;
	margin-top: 20rpx;
	margin-left: 4rpx;
}
.scroll_icon {
	width: 110rpx;
	height: 110rpx;
	margin: -55rpx;
	position: relative;
	left: 15rpx;
	top: 5rpx;
}
.icon_pic {
	width: 100%;
	height: 100%;
}
#middle {
	margin: 0;
}
.tips {
	height: 280rpx;
	margin: 20rpx;
}
.tips_item {
	display:flex;
	justify-content: center;
}
.tips_box {
	width: 100%;  /* 控制两张图片的间距 */
	height: 100%;
}
.tips_img {
	width: 100%;
	height: 100%;
}
.bill {
	width: auto;
	height: 100rpx;
	margin: 20rpx;
	border-radius: 50rpx;
	background-size: 100% 100%;
	background-repeat: no-repeat;
	box-shadow:0 15rpx 15rpx -10rpx #808080;
}
.news_title {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-end;
	margin-top: 50rpx;
	margin-bottom: 20rpx;
}
.news_name {
	font-size: 35rpx;
	font-weight: bold;
	margin: 20rpx;
}
.news_more {
	font-size: 25rpx;
	color: #8F8F94;
	margin: 20rpx;
}
.news_container {
	height: auto;
	margin: 20rpx;
}
.news_pic {
	width: auto;
	height: 200rpx;
	box-shadow:0 10rpx 15rpx -10rpx #808080;
}
.news_img {
	width: 100%;
	height: 100%;
	object-fit: cover;
	border-radius: 10rpx;
}
.news_content {
	font-size: 30rpx;
	margin-top: 20rpx;
}
.news_class {
	width: 150rpx;
	height: 50rpx;
	display:flex;
	justify-content: center;
	align-items: center;
	margin-top: 10rpx;
	margin-bottom: 30rpx;
	border-radius: 25rpx;
	background-color: #ff87a5;
	color: #FFFFFF;
	font-size: 25rpx;
}

